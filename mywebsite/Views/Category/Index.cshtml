@model IEnumerable<JewelryStore.Models.Category>

@{
    ViewBag.Title = "Список категорий";
}

<h2>Категории</h2>

<p>
    @Html.ActionLink("Добавить", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.CategoryId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Детали", "Details", new { id=item.CategoryId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.CategoryId }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
