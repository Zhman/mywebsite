@model IEnumerable<JewelryStore.UI.Models.JewelryListModel>

@{
    ViewBag.Title = "Index";
}

<h2>Все украшения</h2>

<p>    
    <input type="button" class="btn btn-success" value="Добавить украшение" onclick="location.href='@Url.Action("Create", "Jewelry")'" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Jewelry.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jewelry.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jewelry.OfferPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jewelry.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jewelry.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jewelry.IsAvailable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jewelry.Novelty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jewelry.Discounted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Jewelry.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jewelry.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jewelry.OfferPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jewelry.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jewelry.IsAvailable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jewelry.Novelty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jewelry.Discounted)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Jewelry.JewelryId }, new { @class = "btn btn-warning" }) |           
            @Html.ActionLink("Удалить", "Delete", new { id=item.Jewelry.JewelryId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

<hr />
@Html.ActionLink("Вернуться к списку категорий", "Index", "Category")

