@model IEnumerable<JewelryStore.Models.Order>
    @{
        ViewBag.Title = "Заказы пользователей";
    }

    <h2>Заказы пользователей</h2>
    <table class="table">
        <tr>
            <th>
                № заказа
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>

        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => order.OrderId)
                </td>
                <td>
                    @Html.ActionLink("Детали заказа пользователя", "AdminIndex", "Order", new { orderId = order.OrderId }, new { @class = "btn btn-info" })                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => order.Status)
                </td>
            </tr>
        }

    </table>
